<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enableDNDPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable DND Permission"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_disableDNDPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable DND Permission"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_enableDNDPermission" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enableDND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable DND"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_disableDNDPermission" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_disableDND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable DND"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_enableDND" />
</androidx.constraintlayout.widget.ConstraintLayout>